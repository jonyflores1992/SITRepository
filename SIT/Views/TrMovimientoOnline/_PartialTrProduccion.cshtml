    </tbody>

</table>

<script>
    $(document).ready(function () {

        $('#Tabla').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
            },

            responsive: true,
            autowidth: false,
            destroy: true,
            deferRender: true,
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'excel',
                    text: 'Excel',
                    className: "btnArrow",
                    title: 'Documento de excel',
                    filename: 'Exportado',
                    autoFilter: true,
                    sheetName: 'Datos',
                    messageTop: 'Listado'
                },
                {
                    extend: 'pdfHtml5',
                    title: 'Documento PDF',
                    text: 'PDF',
                    className: "btnArrow",
                    filename: 'Exportado',
                    orientation: 'landscape',
                    pageSize: 'LEGAL',
                    messageTop: 'Listado',
                    download: 'open',
                    customize: function (doc) {
                        doc['footer'] = (function (page, pages) {
                            return {
                                columns: [{
                                    alignment: 'center',
                                    text: [
                                        { text: page.toString(), italics: true },
                                        ' of ',
                                        { text: pages.toString(), italics: true }
                                    ]
                                }],
                                margin: [10, 0]
                            }
                        });
                    }
                }
            ]

        });
    });
</script>