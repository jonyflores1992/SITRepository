@model SIT.Models.GrupoRecurso

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/SidebarMenu.cshtml";
    var rutafoto = "~/images/" + (Model.Foto ?? "SinFoto.png");
}
<h1>Detalles</h1>

<div>
    <h4>GrupoRecurso</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="card-header">
                <h3>Grupo: @Html.DisplayNameFor(model => model.Grupo)</h3>
            </div>

        </div>
        <div class="col-md-12">
            <div class="card-header">
                @Html.DisplayFor(model => model.Grupo)
            </div>
        </div>
        <div class="col-md-12">
            <div class="card-header">
                <h3>
                    UM:
                    @Html.DisplayFor(model => model.IdUnidadMedidaNavigation.UnidadDeMedida1)
                </h3>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card-header">
                <h3>
                    Sector:
                    @Html.DisplayFor(model => model.IdSectorNavigation.Sector1)
                </h3>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card-header">
                <h3>
                    Stado:
                    @Html.DisplayFor(model => model.StatusNavigation.Status)
                </h3>
            </div>
        </div>
        <div class="col-sm-10">
            <img class="card-img-top image" src="@rutafoto" asp-append-version="true" />
        </div>

    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn-success m-1">
        <i class="fas fa-backward"></i>
        Regresar
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary m-1">
        <i class="fas fa-save"></i>
        Editar
    </a>
</div>
<style>
    .image {
        height: 300px;
        width: 300px;
    }
</style>